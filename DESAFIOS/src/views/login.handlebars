    <section class="modal" id="modal">
        <div class="modalContainer">
            <h2 class="modalTitle">Reset your password</h2>
            <form action="" class="formModal" id="formResetPass">
                <input class="controls" name="email" placeholder="Enter your email whit you are register">
                <input class="controls"type="password" name="password" placeholder="Enter your password">
                <input type="submit" class="buttonModal" value="change">
            </form>
            <a href="" class="modalClose" id="modalClose">Comeback to login</a>
            <p id="errorResetPass" class="errorResetPass"></p>
        </div>
    </section>
</div>

